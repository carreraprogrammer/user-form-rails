<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :birth_date, style: "display: block" %>
    <%= form.date_field :birth_date %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :gender_id, style: "display: block" %>
    <%= form.collection_select :gender_id, Gender.order(:description), :id, :description, include_blank: true %>
  </div>


  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

    <div>
    <%= form.label :country_id, style: "display: block" %>
    <%= form.collection_select :country_id, Country.order(:name), :id, :name, include_blank: true, id: 'country_select' %>
  </div>

  <div>
    <%= form.label :state_id, style: "display: block" %>
    <%= form.collection_select :state_id, State.order(:name), :id, :name, include_blank: true, id: 'state_select', disabled: true %>
  </div>

  <div>
    <%= form.label :city_id, style: "display: block" %>
    <%= form.collection_select :city_id, City.order(:name), :id, :name, include_blank: true, id: 'city_select', disabled: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
